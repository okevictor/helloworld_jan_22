pipeline {
    agent any
    triggers {
  pollSCM('* * * * *')
    }
    stages {
        stage('build') {
            steps {
                echo 'Building.... '
                sleep 5
            }
        }
          
          stage('test') {
            steps {
                echo 'Testing....'
                sleep 5
            }
        }
          stage('deploy') {
            steps {
                echo 'Deploy'
                sleep 2
            }
        }
    }
}
