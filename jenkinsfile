pipeline {

    triggers {
  pollSCM('* * * * *')
    }
    
    agent any
    
    tools {
  maven 'M2_HOME'
}
    
    stages {
        stage('Build') {
            steps {
                sh "mvn clean"
                sh "mvn install"
                sh "mvn package"
            }
        }
          
          stage('test') {
            steps {
                sh "mvn test"
            }
        }
          stage('deploy') {
            steps {
                echo 'Deploy'
                sleep 2
            }
        }
    }
}
